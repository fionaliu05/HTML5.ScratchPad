@{
    Layout = null;
}

<!DOCTYPE html>

<!-- ng-app directive to bootstrap the application-->
<html ng-app="app.main.module">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Customers</title>
</head>

<!-- Use the controllerAs syntax over the classic controller with $scope syntax.
    controllerAs is syntactic sugar over $scope -->

<body ng-controller="rootController as root">
   
    <!-- custom angular js directive for top collapsble nav bar menu-->
    <top-bar></top-bar>
    <div class="row-offcanvas row-offcanvas-left">
        <side-bar></side-bar>
        <div id="main">
            <div class="col-md-12">
                <p class="visible-xs">
                    <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas"><i class="glyphicon glyphicon-chevron-left"></i></button>
                </p>
                <!-- page-class $scope varaiable used to change style in the rendered template (SPA app template).
                    This is a nice trick to render different styles in ng-view templates -->
                <div class="page {{ pageClass }}" ng-view></div>
            </div>
        </div>
    </div><!--/row-offcanvas -->

    <script src="Scripts/angular.min.js"></script>
    <script src="app/app.customers.module.js"></script>

</body>
</html>
